<div class="row">
	<div class="col-md-3">
		<div class="well">
			<p class="text-center">
				{{#link-to 'user' model.login}}<img class="avatar-image" src={{model.avatar_url}} />{{/link-to}}
			</p>
			<h4>{{#link-to 'user' model.login}}{{model.name}}{{/link-to}}</h4>
			<p>{{model.company}}</p>
			<p>{{model.location}}</p>
			<p>{{model.email}}</p>
			<hr/>
			<table class="table table-striped">
				<tr><td>Followers:</td><td>{{model.followers}}</td></tr>
				<tr><td>Repositories:</td><td>{{model.public_repos}}</td></tr>
				<tr><td>Gists:</td><td>{{model.public_gists}}</td></tr>
			</table>
			<p>
				{{#link-to "index"}}Back{{/link-to}}
			</p>
		</div>
	</div>
	<div class="col-md-8">
		{{outlet}}
	</div>
</div>